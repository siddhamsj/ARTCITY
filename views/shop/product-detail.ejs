    <body>
        <%- include('../includes/navigation.ejs') %>

          <main class="centered">
          <div class="card" style="background-color:#282d32;margin:40px 20px;">
            <div class="container-fluid">
              <div class="wrapper row">
                <div class="preview col-md-6">
                  <img src="<%= product.imageUrl %>" alt="<%= product.title %>">

                </div>
                <div class="details-text col-md-6" style="color:white">
                  <a class="back" href="/products"><i class="fas fa-long-arrow-alt-left fa-3x"></i></a>
                  <h1 class="title"><strong><%= product.title %></strong></h1>
                  <h3 class="product-description"><%= product.description %></h3>
                  <h3 class="product-price"><strong>Price : </strong> <i class="fas fa-rupee-sign"></i><%= product.price %></h3>
                  <div class="action">
                    <form action="/cart" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="add-to-cart btn btn-default" type="submit"><i class="fas fa-cart-plus"></i>&nbsp Add to Cart</button>
                    <button class="like btn btn-default" type="button"><span class="fa fa-heart"></span> <%=product.likes%></button>
                    <button class="artist add-to-cart btn btn-default" type="button"><a href="/author/<%=authorId %>" style="color:initial; "> <i class="fas fa-external-link-alt"></i>Artist's Gallery</button>
                  
                      <input type="hidden" name="productId" value="<%= product._id %>">
                      </form>
                  </div>
                </div>
              </div>
            </div>

          </div>
          </main>
</<body>
